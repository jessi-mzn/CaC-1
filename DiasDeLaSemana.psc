Algoritmo DiasDeLaSemana
	definir dia Como entero;
	 
	
	Escribir "ingresa un numero del 1 al 7";
	leer dia;
	Segun dia Hacer
		1:
			Escribir "Lunes";
		2:
			Escribir "Martes";
		3:
			Escribir "Miercoles";
		4:
			Escribir "Jueves";
		5:
			Escribir "Viernes";
		6:
			Escribir "Sabado";	
		7:
			Escribir "Domingo";
		De Otro Modo:
			Escribir "El numero ingresado es invalido";
	FinSegun
FinAlgoritmo
